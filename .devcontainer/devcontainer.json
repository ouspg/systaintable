{
    "name": "Systaintable devcontainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [5000, 8080],
    "postCreateCommand": "./build-tools.sh",
    
    "mounts": [
        "source=systaintable-bashhistory-${devcontainerId},target=/commandhistory,type=volume"
    ],
    
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "ms-python.python",
                "ms-vscode.vscode-json"
            ]
        }
    },
    
    "remoteUser": "root",
}