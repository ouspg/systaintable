{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "entry": {
        "type": "object",
        "properties": {
          "timestamp": { "type": "string", "format": "date-time" },
          "author": { "type": "string" },
          "processing_type": {
            "type": "string",
            "enum": [
              "identification", "collection", "manual transformation",
              "automatic transformation", "audit", "analysis", "destruction", "other"
            ]
          },
          "processing_description": { "type": "string" }
        },
        "required": ["timestamp", "author", "processing_type", "processing_description"]
      },
      "data_facts": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "storage": {
            "type": "object",
            "properties": {
              "source_location": { "type": "string" },
              "source_location_other": { "type": "string" },
              "location": { "type": "string" },
              "location_other": { "type": "string" },
              "retention": {
                "type": "object",
                "properties": {
                  "deadline": { "type": "string", "format": "date" },
                  "removal_policy": {
                    "type": "string",
                    "enum": ["delete", "delete and notify", "return and delete"]
                  }
                },
                "required": ["deadline", "removal_policy"]
              }
            },
            "required": ["source_location", "location", "retention"]
          },
          "metrics": {
            "type": "object",
            "properties": {
              "start_time": { "type": "string", "format": "date-time" },
              "end_time": { "type": "string", "format": "date-time" },
              "collection_time": { "type": "string", "format": "date-time" },
              "size": { "type": "integer", "minimum": 0 },
              "event_count": { "type": "integer", "minimum": 1 },
              "other_metrics": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["start_time", "end_time", "collection_time", "size", "event_count"]
          },
          "rights": {
            "type": "object",
            "properties": {
              "license": { "type": "array", "items": { "type": "string" } },
              "other_license": { "type": "string" },
              "owner": {
                "type": "object",
                "properties": {
                  "owner_name": { "type": "string" },
                  "contact_name": { "type": "string" },
                  "contact_email": { "type": "string", "format": "email" },
                  "contact_phone": { "type": "string" },
                  "contact_other": { "type": "string" },
                  "citation": { "type": "string" }
                },
                "required": ["owner_name", "contact_name", "contact_email"]
              }
            },
            "required": ["license", "owner"]
          },
          "PII": {
            "type": "object",
            "properties": {
              "sanitation": {
                "type": "string",
                "enum": ["raw", "pseudonymized", "anonymized"]
              },
              "may_contain": { "type": "array", "items": { "type": "string" } },
              "may_contain_other": { "type": "array", "items": { "type": "string" } },
              "confirmed_to_contain": { "type": "array", "items": { "type": "string" } },
              "confirmed_to_contain_other": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["sanitation"]
          }
        },
        "required": ["description", "storage", "metrics", "rights", "PII"]
      }
    },
    "required": ["entry", "data_facts"]
  }
  